/* 分析卡片样式 */

/* ✅ 分析容器：覆盖整个画布，层级最高 */
#analysis-host {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 10000; /* ✅ 确保在最上层，高于任何节点/连线 */
}

/* ✅ 遮罩层：半透明背景，点击关闭 */
.analysis-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.25);
    pointer-events: auto;
    cursor: pointer;
    z-index: 1; /* ✅ 遮罩在下层 */
}

/* ✅ 分析卡片：居中显示 */
.analysis-card {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    
    /* ✅ 强制使用明确的颜色，不依赖 CSS 变量 */
    background: #ffffff;
    color: #1e1e1e;
    border: 1px solid #cccccc;
    border-radius: 8px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.35);
    
    width: 600px;
    max-width: 90vw;
    max-height: 80vh;
    display: flex;
    flex-direction: column;
    pointer-events: auto;
    cursor: default;
    z-index: 2; /* ✅ 卡片在遮罩之上 */
    
    /* ✅ 默认不可见，添加 show 类后显示 */
    opacity: 0;
    transform: translate(-50%, -50%) translateY(10px);
    transition: opacity 0.15s ease, transform 0.15s ease;
}

/* ✅ 显示状态 */
.analysis-card.show {
    opacity: 1;
    transform: translate(-50%, -50%) translateY(0);
}

/* 标题栏 */
.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    border-bottom: 1px solid #e0e0e0;
    background: #f5f5f5;
}

.card-title {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    font-weight: 600;
    color: #1e1e1e;
}

.file-icon {
    font-size: 18px;
}

.file-name {
    color: #1e1e1e;
}

/* ✅ Loading 状态标记 */
.loading-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 2px 8px;
    margin-left: 8px;
    font-size: 11px;
    background: var(--vscode-badge-background);
    color: var(--vscode-badge-foreground);
    border-radius: 10px;
    animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
}

.card-actions {
    display: flex;
    gap: 4px;
}

.btn-icon {
    background: transparent;
    border: none;
    color: #1e1e1e;
    cursor: pointer;
    padding: 4px 8px;
    border-radius: 3px;
    font-size: 14px;
}

.btn-icon:hover {
    background: #e8e8e8;
}

/* Tab栏 */
.card-tabs {
    display: flex;
    border-bottom: 1px solid #e0e0e0;
    background: #f5f5f5;
}

.tab-btn {
    flex: 1;
    padding: 10px 16px;
    background: transparent;
    border: none;
    color: #1e1e1e;
    cursor: pointer;
    font-size: 13px;
    border-bottom: 2px solid transparent;
    transition: all 0.2s;
}

.tab-btn:hover {
    background: #e0e0e0;
}

.tab-btn.active {
    border-bottom-color: #007acc;
    color: #007acc;
}

/* 内容区域 */
.card-content {
    overflow-y: auto;
    max-height: calc(80vh - 120px);
    padding: 16px;
    background: #ffffff;
}

.tab-pane {
    display: none;
}

.tab-pane.active {
    display: block;
}

/* 概览Tab */
.overview-section h4 {
    font-size: 13px;
    font-weight: 600;
    margin: 16px 0 8px 0;
    color: #1e1e1e;
}

.overview-section h4:first-child {
    margin-top: 0;
}

.summary {
    padding: 12px;
    background: #f0f8ff;
    border-left: 3px solid #007acc;
    margin-bottom: 16px;
    line-height: 1.6;
    color: #1e1e1e;
}

.fact-list,
.inference-list,
.recommendation-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.fact-list li,
.inference-list li {
    padding: 8px 12px;
    margin-bottom: 6px;
    background: #f5f5f5;
    border-radius: 4px;
    line-height: 1.5;
    color: #1e1e1e;
}

.recommendation-list li {
    padding: 10px 12px;
    margin-bottom: 8px;
    background: var(--vscode-list-inactiveSelectionBackground);
    border-radius: 4px;
    border-left: 3px solid transparent;
}

.recommendation-list li.rec-high {
    border-left-color: var(--vscode-errorForeground);
    background: rgba(255, 0, 0, 0.05);
}

.recommendation-list li.rec-medium {
    border-left-color: var(--vscode-editorWarning-foreground);
    background: rgba(255, 165, 0, 0.05);
}

.recommendation-list li.rec-low {
    border-left-color: var(--vscode-testing-iconPassed);
    background: rgba(0, 255, 0, 0.03);
}

.rec-header {
    display: flex;
    gap: 8px;
    align-items: flex-start;
    margin-bottom: 4px;
}

.rec-priority {
    font-size: 14px;
    flex-shrink: 0;
}

.rec-text {
    flex: 1;
    font-weight: 500;
}

.rec-reason {
    margin: 6px 0 4px 22px;
    font-size: 12px;
    color: var(--vscode-descriptionForeground);
    font-style: italic;
}

.confidence {
    display: inline-block;
    margin-left: 8px;
    padding: 2px 6px;
    background: var(--vscode-badge-background);
    color: var(--vscode-badge-foreground);
    font-size: 11px;
    border-radius: 3px;
}

.meta-info {
    margin-top: 16px;
    padding-top: 12px;
    border-top: 1px solid var(--vscode-panel-border);
    font-size: 12px;
    color: var(--vscode-descriptionForeground);
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
}

.badge-warning {
    padding: 2px 8px;
    background: var(--vscode-editorWarning-foreground);
    color: var(--vscode-editor-background);
    border-radius: 3px;
    font-size: 11px;
}

.badge-ai {
    padding: 2px 8px;
    background: var(--vscode-button-background);
    color: var(--vscode-button-foreground);
    border-radius: 3px;
    font-size: 11px;
}

/* API Tab */
.api-section h4 {
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 12px;
}

.api-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.api-item {
    padding: 12px;
    margin-bottom: 8px;
    background: var(--vscode-list-inactiveSelectionBackground);
    border-radius: 4px;
}

.api-header {
    display: flex;
    gap: 8px;
    align-items: center;
    margin-bottom: 6px;
}

.api-kind {
    display: inline-block;
    padding: 2px 6px;
    background: var(--vscode-badge-background);
    color: var(--vscode-badge-foreground);
    font-size: 11px;
    border-radius: 3px;
    text-transform: uppercase;
}

.api-name {
    font-weight: 600;
    color: var(--vscode-symbolIcon-functionForeground);
}

.api-signature {
    margin-top: 6px;
}

.api-signature code {
    display: block;
    padding: 6px 8px;
    background: var(--vscode-textCodeBlock-background);
    border-radius: 3px;
    font-family: var(--vscode-editor-font-family);
    font-size: 12px;
    line-height: 1.4;
    overflow-x: auto;
}

/* 依赖Tab */
.deps-section h4 {
    font-size: 13px;
    font-weight: 600;
    margin: 16px 0 8px 0;
}

.deps-section h4:first-child {
    margin-top: 0;
}

.deps-list {
    list-style: none;
    padding: 0;
    margin: 0 0 16px 0;
}

.deps-list li {
    padding: 8px 12px;
    margin-bottom: 4px;
    background: var(--vscode-list-inactiveSelectionBackground);
    border-radius: 4px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.dep-count {
    padding: 2px 6px;
    background: var(--vscode-badge-background);
    color: var(--vscode-badge-foreground);
    font-size: 11px;
    border-radius: 3px;
}

/* 证据Tab */
.evidence-section h4 {
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 12px;
}

.evidence-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.evidence-item {
    padding: 8px 12px;
    margin-bottom: 4px;
    background: var(--vscode-list-inactiveSelectionBackground);
    border-radius: 4px;
    display: flex;
    gap: 12px;
    align-items: center;
}

.evidence-id {
    font-family: var(--vscode-editor-font-family);
    font-size: 11px;
    padding: 2px 6px;
    background: var(--vscode-badge-background);
    color: var(--vscode-badge-foreground);
    border-radius: 3px;
}

.evidence-link {
    color: var(--vscode-textLink-foreground);
    text-decoration: none;
    cursor: pointer;
    font-size: 12px;
}

.evidence-link:hover {
    text-decoration: underline;
}

/* 空状态 */
.empty {
    padding: 24px;
    text-align: center;
    color: var(--vscode-descriptionForeground);
    font-style: italic;
}
