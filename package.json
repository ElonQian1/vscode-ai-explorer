{
  "name": "ai-explorer",
  "displayName": "AI Explorer - 智能资源管理器",
  "description": "AI驱动的文件翻译和UML图表生成插件",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "ai",
    "translation",
    "uml",
    "explorer",
    "chinese",
    "diagram"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "aiExplorer",
          "name": "AI 资源管理器",
          "when": "workspaceFolderCount > 0",
          "icon": "$(folder-library)"
        }
      ]
    },
    "commands": [
      {
        "command": "aiExplorer.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "aiExplorer.translate",
        "title": "翻译为中文",
        "icon": "$(symbol-text)"
      },
      {
        "command": "aiExplorer.toggleAlias",
        "title": "切换别名显示",
        "icon": "$(eye)"
      },
      {
        "command": "umlCanvas.generateFromFile",
        "title": "生成 UML 图表",
        "icon": "$(graph)"
      },
      {
        "command": "umlCanvas.openCanvas",
        "title": "打开 UML 画布",
        "icon": "$(preview)"
      },
      {
        "command": "aiExplorer.setOpenAIKey",
        "title": "设置 OpenAI API Key"
      },
      {
        "command": "aiExplorer.setHunyuanKey", 
        "title": "设置腾讯混元 API Key"
      },
      {
        "command": "aiExplorer.chooseProvider",
        "title": "选择 AI 提供商"
      },
      {
        "command": "aiExplorer.translateAll",
        "title": "翻译整个工作区"
      },
      {
        "command": "aiExplorer.reloadAliases",
        "title": "重新加载别名"
      },
      {
        "command": "aiExplorer.checkAIStatus",
        "title": "检查AI状态"
      },
      {
        "command": "aiExplorer.testAITranslation",
        "title": "测试AI翻译"
      },
      {
        "command": "aiExplorer.renameToAlias",
        "title": "用别名重命名文件",
        "icon": "$(edit)"
      },
      {
        "command": "aiExplorer.copyAlias",
        "title": "复制别名",
        "icon": "$(copy)"
      },
      {
        "command": "aiExplorer.clearCacheForNode",
        "title": "清除节点缓存",
        "icon": "$(trash)"
      },
      {
        "command": "aiExplorer.translateThisFile",
        "title": "AI 资源管理器：翻译此文件（仅此文件）",
        "icon": "$(symbol-text)"
      },
      {
        "command": "aiExplorer.forceAITranslate",
        "title": "AI 资源管理器：强制用 AI 翻译此文件",
        "icon": "$(sparkle)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiExplorer.refresh",
          "when": "view == aiExplorer",
          "group": "navigation@1"
        },
        {
          "command": "aiExplorer.translateAll",
          "when": "view == aiExplorer",
          "group": "navigation@2"
        },
        {
          "command": "aiExplorer.toggleAlias",
          "when": "view == aiExplorer",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "aiExplorer.translate",
          "when": "view == aiExplorer && (viewItem == file || viewItem == folder)",
          "group": "navigation@10"
        },
        {
          "command": "aiExplorer.renameToAlias",
          "when": "view == aiExplorer && (viewItem == fileHasAlias || viewItem == folderHasAlias)",
          "group": "inline@10"
        },
        {
          "command": "aiExplorer.copyAlias",
          "when": "view == aiExplorer && (viewItem == fileHasAlias || viewItem == folderHasAlias)",
          "group": "navigation@20"
        },
        {
          "command": "aiExplorer.clearCacheForNode",
          "when": "view == aiExplorer",
          "group": "z_cleanup@99"
        },
        {
          "command": "aiExplorer.translateThisFile",
          "when": "view == aiExplorer && (viewItem == file || viewItem == fileHasAlias)",
          "group": "navigation@15"
        },
        {
          "command": "aiExplorer.forceAITranslate",
          "when": "view == aiExplorer && (viewItem == file || viewItem == fileHasAlias)",
          "group": "navigation@16"
        }
      ],
      "explorer/context": [
        {
          "command": "aiExplorer.translateThisFile",
          "when": "resourceScheme == file",
          "group": "navigation@915"
        },
        {
          "command": "aiExplorer.forceAITranslate",
          "when": "resourceScheme == file",
          "group": "navigation@916"
        },
        {
          "command": "umlCanvas.generateFromFile",
          "when": "resourceExtname =~ /\\.(ts|js|py|java|cs|cpp|c|h)$/",
          "group": "navigation@1"
        }
      ],
      "editor/context": [
        {
          "command": "umlCanvas.generateFromFile",
          "when": "resourceExtname =~ /\\.(ts|js|py|java|cs|cpp|c|h)$/",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "AI Explorer",
      "properties": {
        "aiExplorer.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API密钥"
        },
        "aiExplorer.openaiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI API基础URL"
        },
        "aiExplorer.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "enum": [
            "gpt-3.5-turbo",
            "gpt-4",
            "gpt-4-turbo-preview"
          ],
          "description": "使用的AI模型"
        },
        "aiExplorer.cacheEnabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用翻译缓存"
        },
        "aiExplorer.autoTranslate": {
          "type": "boolean",
          "default": false,
          "description": "是否自动翻译新文件"
        },
        "aiExplorer.provider.primary": {
          "type": "string",
          "enum": ["openai", "hunyuan"],
          "default": "openai",
          "description": "主用 AI 提供商"
        },
        "aiExplorer.provider.fallback": {
          "type": "string",
          "enum": ["none", "openai", "hunyuan"],
          "default": "none",
          "description": "备用 AI 提供商"
        },
        "aiExplorer.hunyuanApiKey": {
          "type": "string",
          "default": "",
          "description": "腾讯云混元 API Key（从控制台获取，非 SecretId/SecretKey）"
        },
        "aiExplorer.hunyuanBaseUrl": {
          "type": "string", 
          "default": "https://api.hunyuan.cloud.tencent.com/v1",
          "description": "腾讯云混元 OpenAI 兼容接口地址（官方端点，无需修改）"
        },
        "aiExplorer.hunyuanModel": {
          "type": "string",
          "enum": ["hunyuan-turbo", "hunyuan-lite", "hunyuan-pro", "hunyuan-standard"],
          "default": "hunyuan-turbo",
          "description": "腾讯云混元模型选择（推荐 hunyuan-turbo）"
        },
        "aiExplorer.enableDictionary": {
          "type": "boolean",
          "default": true,
          "description": "启用内置词典"
        },
        "aiExplorer.enableLearning": {
          "type": "boolean",
          "default": true,
          "description": "启用学习型词典"
        },
        "umlCanvas.layout": {
          "type": "string",
          "default": "hierarchical",
          "enum": [
            "hierarchical",
            "force",
            "grid"
          ],
          "description": "UML图表布局算法"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "compile:watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "build:explorer": "tsc -b src/features/explorer-alias",
    "build:uml": "tsc -b src/features/uml-canvas",
    "build:core": "tsc -b src/core",
    "dev": "npm run compile:watch",
    "grep:alias": "npx rg -t ts 'explorer-alias|别名|资源管理器' src/features/explorer-alias",
    "grep:uml": "npx rg -t ts 'uml-canvas|UML|图表' src/features/uml-canvas"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "eslint-plugin-boundaries": "^4.0.0",
    "eslint-plugin-import": "^2.28.1",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "d3-force": "^3.0.0",
    "d3-selection": "^3.0.0",
    "openai": "^4.20.1",
    "vis-network": "^9.1.6"
  }
}
