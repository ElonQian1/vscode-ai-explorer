{
  "name": "ai-explorer",
  "displayName": "AI Explorer - 智能资源管理器",
  "description": "AI驱动的文件翻译和UML图表生成插件",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "ai",
    "translation",
    "uml",
    "explorer",
    "chinese",
    "diagram"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "aiExplorer",
          "name": "AI 资源管理器",
          "when": "workspaceFolderCount > 0",
          "icon": "$(folder-library)"
        }
      ]
    },
    "commands": [
      {
        "command": "aiExplorer.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "aiExplorer.translate",
        "title": "翻译为中文",
        "icon": "$(symbol-text)"
      },
      {
        "command": "aiExplorer.toggleAlias",
        "title": "切换别名显示",
        "icon": "$(eye)"
      },
      {
        "command": "umlCanvas.generateFromFile",
        "title": "生成 UML 图表",
        "icon": "$(graph)"
      },
      {
        "command": "umlCanvas.openCanvas",
        "title": "打开 UML 画布",
        "icon": "$(preview)"
      },
      {
        "command": "aiExplorer.setOpenAIKey",
        "title": "设置 OpenAI API Key"
      },
      {
        "command": "aiExplorer.setHunyuanKey",
        "title": "设置腾讯混元 API Key"
      },
      {
        "command": "aiExplorer.chooseProvider",
        "title": "选择 AI 提供商"
      },
      {
        "command": "aiExplorer.translateAll",
        "title": "翻译整个工作区"
      },
      {
        "command": "aiExplorer.reloadAliases",
        "title": "重新加载别名"
      },
      {
        "command": "aiExplorer.checkAIStatus",
        "title": "检查AI状态"
      },
      {
        "command": "aiExplorer.testAITranslation",
        "title": "测试AI翻译"
      },
      {
        "command": "aiExplorer.renameToAlias",
        "title": "用别名重命名文件",
        "icon": "$(edit)"
      },
      {
        "command": "aiExplorer.copyAlias",
        "title": "复制别名",
        "icon": "$(copy)"
      },
      {
        "command": "aiExplorer.clearCacheForNode",
        "title": "清除节点缓存",
        "icon": "$(trash)"
      },
      {
        "command": "aiExplorer.translateThisFile",
        "title": "AI 资源管理器：翻译此文件（仅此文件）",
        "icon": "$(symbol-text)"
      },
      {
        "command": "aiExplorer.forceAITranslate",
        "title": "AI 资源管理器：强制用 AI 翻译此文件",
        "icon": "$(sparkle)"
      },
      {
        "command": "filetreeBlueprint.openFromWorkspace",
        "title": "生成文件树蓝图",
        "icon": "$(graph-line)"
      },
      {
        "command": "filetreeBlueprint.openFromPath",
        "title": "在此打开蓝图",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "filetreeBlueprint.openFromJson",
        "title": "打开工作流图（从 JSON/MD）",
        "icon": "$(json)"
      },
      {
        "command": "filetreeBlueprint.openHelp",
        "title": "蓝图：打开帮助与快捷键",
        "icon": "$(question)"
      },
      {
        "command": "fileAnalysis.clearCache",
        "title": "文件分析：清除缓存",
        "icon": "$(trash)"
      },
      {
        "command": "filetreeBlueprint.toggleHints",
        "title": "蓝图：开关状态栏提示",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiExplorer.refresh",
          "when": "view == aiExplorer",
          "group": "navigation@1"
        },
        {
          "command": "aiExplorer.translateAll",
          "when": "view == aiExplorer",
          "group": "navigation@2"
        },
        {
          "command": "aiExplorer.toggleAlias",
          "when": "view == aiExplorer",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "aiExplorer.translate",
          "when": "view == aiExplorer && (viewItem == file || viewItem == folder)",
          "group": "navigation@10"
        },
        {
          "command": "aiExplorer.renameToAlias",
          "when": "view == aiExplorer && (viewItem == fileHasAlias || viewItem == folderHasAlias)",
          "group": "inline@10"
        },
        {
          "command": "aiExplorer.copyAlias",
          "when": "view == aiExplorer && (viewItem == fileHasAlias || viewItem == folderHasAlias)",
          "group": "navigation@20"
        },
        {
          "command": "aiExplorer.clearCacheForNode",
          "when": "view == aiExplorer",
          "group": "z_cleanup@99"
        },
        {
          "command": "aiExplorer.translateThisFile",
          "when": "view == aiExplorer && (viewItem == file || viewItem == fileHasAlias || viewItem == folder || viewItem == folderHasAlias)",
          "group": "navigation@15"
        },
        {
          "command": "aiExplorer.forceAITranslate",
          "when": "view == aiExplorer && (viewItem == file || viewItem == fileHasAlias || viewItem == folder || viewItem == folderHasAlias)",
          "group": "navigation@16"
        },
        {
          "command": "filetreeBlueprint.openFromPath",
          "when": "view == aiExplorer && (viewItem == folder || viewItem == folderHasAlias)",
          "group": "navigation@17"
        }
      ],
      "explorer/context": [
        {
          "command": "filetreeBlueprint.openFromPath",
          "when": "resourceScheme == file",
          "group": "navigation@910"
        },
        {
          "command": "aiExplorer.translateThisFile",
          "when": "resourceScheme == file",
          "group": "navigation@915"
        },
        {
          "command": "aiExplorer.forceAITranslate",
          "when": "resourceScheme == file",
          "group": "navigation@916"
        },
        {
          "command": "umlCanvas.generateFromFile",
          "when": "resourceExtname =~ /\\.(ts|js|py|java|cs|cpp|c|h)$/",
          "group": "navigation@1"
        }
      ],
      "editor/context": [
        {
          "command": "umlCanvas.generateFromFile",
          "when": "resourceExtname =~ /\\.(ts|js|py|java|cs|cpp|c|h)$/",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "AI Explorer",
      "properties": {
        "aiExplorer.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API密钥"
        },
        "aiExplorer.openaiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI API基础URL"
        },
        "aiExplorer.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "enum": [
            "gpt-3.5-turbo",
            "gpt-4",
            "gpt-4-turbo-preview"
          ],
          "description": "使用的AI模型"
        },
        "aiExplorer.cacheEnabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用翻译缓存"
        },
        "aiExplorer.autoTranslate": {
          "type": "boolean",
          "default": false,
          "description": "是否自动翻译新文件"
        },
        "aiExplorer.fileAnalysis.enableAI": {
          "type": "boolean",
          "default": true,
          "description": "文件分析时是否启用AI增强(生成推断和建议)"
        },
        "filetreeBlueprint.excludes": {
          "type": "array",
          "default": [
            "**/.git/**",
            "**/node_modules/**",
            "**/dist/**",
            "**/out/**",
            "**/target/**",
            "**/build/**",
            "**/.vscode/**",
            "**/.idea/**",
            "**/.DS_Store",
            "**/tsconfig.tsbuildinfo",
            "**/.next/**",
            "**/.nuxt/**",
            "**/vendor/**",
            "**/__pycache__/**",
            "**/.pytest_cache/**",
            "**/coverage/**",
            "**/.cargo/**"
          ],
          "description": "文件树蓝图扫描时排除的路径（glob 模式）"
        },
        "filetreeBlueprint.defaultScanMode": {
          "type": "string",
          "enum": [
            "shallow",
            "deep"
          ],
          "default": "shallow",
          "description": "默认扫描模式：shallow（仅当前目录）或 deep（递归所有子目录）"
        },
        "filetreeBlueprint.showStatusBarHint": {
          "type": "boolean",
          "default": true,
          "description": "打开蓝图时在状态栏显示 15 秒的操作提示"
        },
        "filetreeBlueprint.autoShowHelpFirstTime": {
          "type": "boolean",
          "default": true,
          "description": "首次打开蓝图时自动显示帮助浮层"
        },
        "filetreeBlueprint.useNewArchitecture": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "🚨 **架构选择（重要）**\n\n✅ **true (推荐)**：使用新架构 (bundle.js)\n- ✅ 单文件打包，加载速度快\n- ✅ 无 CSP 安全问题\n- ✅ 修复所有 TypeError 错误\n- ✅ ES6 模块化，代码质量高\n\n❌ **false (已废弃)**：使用旧架构 (graphView.js)\n- ❌ 存在 `TypeError: Cannot set properties of null`\n- ❌ 违反 CSP 内容安全策略\n- ❌ 渲染失败和功能卡死\n- ❌ 多文件加载，性能差\n\n⚠️ **警告**：除非紧急降级，否则不要设置为 false！"
        },
        "aiExplorer.provider.primary": {
          "type": "string",
          "enum": [
            "openai",
            "hunyuan"
          ],
          "default": "openai",
          "description": "主用 AI 提供商"
        },
        "aiExplorer.provider.fallback": {
          "type": "string",
          "enum": [
            "none",
            "openai",
            "hunyuan"
          ],
          "default": "none",
          "description": "备用 AI 提供商"
        },
        "aiExplorer.hunyuanApiKey": {
          "type": "string",
          "default": "",
          "description": "腾讯云混元 API Key（从控制台获取，非 SecretId/SecretKey）"
        },
        "aiExplorer.hunyuanBaseUrl": {
          "type": "string",
          "default": "https://api.hunyuan.cloud.tencent.com/v1",
          "description": "腾讯云混元 OpenAI 兼容接口地址（官方端点，无需修改）"
        },
        "aiExplorer.hunyuanModel": {
          "type": "string",
          "enum": [
            "hunyuan-turbo",
            "hunyuan-turbos-longtext",
            "hunyuan-lite",
            "hunyuan-pro",
            "hunyuan-standard"
          ],
          "default": "hunyuan-turbo",
          "description": "腾讯云混元模型选择（推荐 hunyuan-turbo 或 hunyuan-turbos-longtext 长文本版）"
        },
        "aiExplorer.enableDictionary": {
          "type": "boolean",
          "default": true,
          "description": "启用内置词典"
        },
        "aiExplorer.enableLearning": {
          "type": "boolean",
          "default": true,
          "description": "启用学习型词典"
        },
        "aiExplorer.alias.style": {
          "type": "string",
          "enum": [
            "natural",
            "literal"
          ],
          "default": "literal",
          "description": "别名翻译风格：natural=自然中文（重组语序、可读性优先），literal=直译（逐词翻译、保持原顺序、保留分隔符）"
        },
        "aiExplorer.alias.keepOriginalDelimiters": {
          "type": "boolean",
          "default": true,
          "description": "直译模式下是否保留原始分隔符（- _ . 驼峰等），false 则使用 literalJoiner 连接"
        },
        "aiExplorer.alias.appendExtSuffix": {
          "type": "boolean",
          "default": false,
          "description": "是否根据扩展名追加中文后缀（如 .js → 脚本, .ts → 模块, .tsx → 组件）。默认 false，保留原扩展名"
        },
        "aiExplorer.alias.acronymAllowlist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "UI",
            "API",
            "HTTP",
            "HTTPS",
            "URL",
            "URI",
            "DOM",
            "ID",
            "UUID",
            "CPU",
            "GPU",
            "DB",
            "SQL",
            "ORM",
            "TCP",
            "UDP",
            "TLS",
            "SSL",
            "SDK",
            "CLI",
            "CI",
            "CD",
            "JWT",
            "CSS",
            "HTML",
            "JS",
            "TS",
            "JSX",
            "TSX",
            "JSON",
            "XML",
            "CSV",
            "PNG",
            "JPG",
            "GIF",
            "SVG",
            "PDF",
            "MD",
            "IOS",
            "OS"
          ],
          "description": "缩写词白名单。只有在此列表中的全大写词才会被保留为缩写（如 API、HTML），其它全大写词会被当作普通词转为小写（如 DEBUG → debug）"
        },
        "aiExplorer.alias.literalJoiner": {
          "type": "string",
          "default": "",
          "description": "直译风格下的连接符（默认为空，可设置为 _ 或 ·）"
        },
        "aiExplorer.alias.literalDictPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".ai/.ai-literal.dict.json",
            ".ai/.ai-glossary.literal.learned.json"
          ],
          "description": "直译词典文件路径（相对于工作区根目录，按优先级从高到低排列）"
        },
        "aiExplorer.alias.numberMode": {
          "type": "string",
          "enum": [
            "keep",
            "cn",
            "roman"
          ],
          "default": "keep",
          "description": "数字显示策略：keep=保持阿拉伯数字；cn=中文数字；roman=罗马数字（仅小范围演示）"
        },
        "aiExplorer.alias.ai.ignoreNumericTokens": {
          "type": "boolean",
          "default": true,
          "description": "AI 兜底时忽略纯数字 token（节省费用与时延）"
        },
        "aiExplorer.alias.learning.blockNumericKeys": {
          "type": "boolean",
          "default": true,
          "description": "学习词典写入时，禁止纯数字键（如 '19'）"
        },
        "aiExplorer.alias.stopwords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "the",
            "a",
            "an",
            "of",
            "for",
            "to",
            "in",
            "on",
            "by",
            "and",
            "or"
          ],
          "description": "停用词列表（这些词不会发送给 AI 翻译）"
        },
        "aiExplorer.alias.keepEnglishVocab": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "react",
            "vue",
            "redux",
            "tailwind",
            "jest",
            "vitest",
            "webpack",
            "vite",
            "eslint",
            "prettier",
            "nodejs",
            "typescript"
          ],
          "description": "保留英文的词汇列表（技术品牌名等，不翻译）"
        },
        "aiExplorer.alias.userWhitelist": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "用户自定义白名单（手动添加或通过右键菜单添加）"
        },
        "aiExplorer.alias.intelligentNumberMode": {
          "type": "boolean",
          "default": true,
          "description": "启用智能数字识别：区分纯ID数字(19, 57)和有语义数字(chapter-3中的3)"
        },
        "aiExplorer.alias.customFilterRules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "正则表达式模式（不含前后斜杠）"
              },
              "reason": {
                "type": "string",
                "description": "过滤原因（用于统计）"
              },
              "description": {
                "type": "string",
                "description": "规则描述"
              }
            }
          },
          "default": [],
          "description": "自定义过滤规则（正则表达式），优先级高于内置规则",
          "markdownDescription": "自定义过滤规则示例：\n```json\n[\n  {\n    \"pattern\": \"^tmp_.*\",\n    \"reason\": \"temp-file\",\n    \"description\": \"临时文件前缀\"\n  }\n]\n```"
        },
        "aiExplorer.batch.maxConcurrency": {
          "type": "number",
          "default": 6,
          "minimum": 1,
          "maximum": 16,
          "description": "批量翻译最大并发数（默认 6）。更高的并发数可以提升性能，但可能触发 API 限流"
        },
        "aiExplorer.batch.retryTimes": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 3,
          "description": "批量翻译失败重试次数（默认 1）。用于处理短暂错误（如 429 限流、网络超时）"
        },
        "umlCanvas.layout": {
          "type": "string",
          "default": "hierarchical",
          "enum": [
            "hierarchical",
            "force",
            "grid"
          ],
          "description": "UML图表布局算法"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:mcp",
    "compile": "tsc -p ./",
    "compile:watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "build:explorer": "tsc -b src/features/explorer-alias",
    "build:uml": "tsc -b src/features/uml-canvas",
    "build:core": "tsc -b src/core",
    "dev": "npm run compile:watch",
    "grep:alias": "npx rg -t ts 'explorer-alias|别名|资源管理器' src/features/explorer-alias",
    "grep:uml": "npx rg -t ts 'uml-canvas|UML|图表' src/features/uml-canvas",
    "build:mcp": "cd servers/ai-explorer-mcp && npm install && npm run build",
    "start:mcp": "cd servers/ai-explorer-mcp && npm start",
    "dev:mcp": "cd servers/ai-explorer-mcp && npm run dev",
    "install:mcp": "cd servers/ai-explorer-mcp && npm install"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "eslint-plugin-boundaries": "^5.1.0",
    "eslint-plugin-import": "^2.28.1",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.1.6",
    "zod": "^3.25.76"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "d3-force": "^3.0.0",
    "d3-selection": "^3.0.0",
    "openai": "^4.20.1",
    "p-queue": "^9.0.0",
    "vis-network": "^9.1.6"
  }
}
