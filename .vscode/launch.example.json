{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 运行整个插件",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "compile"
    },
    {
      "name": "🌟 调试 Explorer-Alias 模块",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "build:explorer",
      "env": {
        "DEBUG_MODULE": "explorer-alias"
      }
    },
    {
      "name": "🎨 调试 UML-Canvas 模块",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "build:uml",
      "env": {
        "DEBUG_MODULE": "uml-canvas"
      }
    },
    {
      "name": "🧪 运行测试",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
      ],
      "outFiles": [
        "${workspaceFolder}/out/test/**/*.js"
      ],
      "preLaunchTask": "pretest"
    }
  ]
}